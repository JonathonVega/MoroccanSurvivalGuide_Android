<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jonathonvega.com.moroccansurvivalguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.WordListActivity"
            android:label="@string/title_activity_word_list"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.TranslationPage"
            android:label="@string/title_activity_translation_page"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.TranslationPagerActivity"
            android:label="TranslationPager"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>